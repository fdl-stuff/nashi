<style>
    .outer-segment {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .segment {
        width: 15rem;
        margin: 2rem;
        padding: 2rem;
        border-radius: 0.5rem;
        background-color: var(--fdl-dark-background);
        overflow: hidden;
        text-align: right;
    }
    .field {
        margin: 1rem 0rem;
        font-size: 0.8rem;
        color: var(--fdl-secondary);
    }
    .field input, .field label {
        display:block;
        padding: 0;
        width: min-content;
    }
    .field input {
        width: 100%;
        padding: 0.8rem 1rem;
        margin: 0.5rem 0;
        display: inline-block;
        border: 0.1rem solid var(--fdl-secondary);
        border-radius: 0.2rem;
        -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
        -moz-box-sizing: border-box;    /* Firefox, other Gecko */
        box-sizing: border-box;         /* Opera/IE 8+ */
    }
    .field input:focus {
        outline: none !important;
        border: 0.1rem solid var(--primary-color);
        border-radius: 0.2rem;
        -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
        -moz-box-sizing: border-box;    /* Firefox, other Gecko */
        box-sizing: border-box;         /* Opera/IE 8+ */
    }
    button {
        background-color: var(--primary-color);
        color: var(--button-color);
        font-size: 0.8rem;
        padding: 0.8rem 1rem;
        border: none;
        border-radius: 0.2rem;
        cursor: pointer;
        width: 8rem;
    }

    button:hover {
        opacity: 0.8;
    }
    #login-title {
        color: var(--fdl-secondary);
        text-align: center;
        margin-top: 0;
    }
</style>
<div class="outer-segment">
    <div class="segment">
        <h1 id="login-title">Anmelden</h1>
        <form id="login-form" method="post" action="/login">
            <div class="field">
                <input tabindex="1" type="email" name="email" placeholder="Email" value="" maxlength="254" required="required">
            </div>
            <div class="field">
                <input tabindex="2" type="password" name="password" placeholder="Passwort" value="" maxlength="32" required="required">
            </div>
            <input type="hidden" name="redir" value="<%- redir %>">
        </form>
        <br>
        <button tabindex="3" type="submit" form="login-form">Anmelden</button>
    </div>
</div>
