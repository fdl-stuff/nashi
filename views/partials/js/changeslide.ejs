<script>
    var currentSlide = 0; 
    function changeSlide(index) {
        var newSlide = currentSlide + index;
        if(newSlide < 0) newSlide = slideImg.length - 1;
        if(newSlide >= slideImg.length) newSlide = 0;
        slideImg[currentSlide].classList.toggle("slideshow-image-active");
        slideImg[newSlide].classList.toggle("slideshow-image-active");

        currentSlide = newSlide;
    }
</script>